<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E3EF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ondel_ondel_8029590"
        android:rotationX="-21"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="384dp"
        android:layout_height="82dp"
        android:background="#9DF0A1"
        android:gravity="center"
        android:rotationX="6"
        android:text="Добро пожаловать в NOBILIS "
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="168dp"
        android:layout_height="69dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FB4654"
        android:rotationX="-21"
        android:text="начать покупки"
        android:textSize="20sp"
        android:textStyle="bold" />




</LinearLayout>

